<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextAppearance="@style/ToolBar.TitleText"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_rounded_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <EditText
                android:padding="5dp"
                android:id="@+id/et_book_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_login_username_default"
                android:singleLine="true"
                android:hint="请输入书名"
                android:maxLines="1"
                android:textColor="@color/black_80"
                android:textColorHint="@color/gray_20"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg" />

        <EditText
            android:padding="5dp"
            android:id="@+id/et_book_count"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_count"
            android:hint="请输入书的数量"
            android:maxLines="1"
            android:textColor="@color/black_80"
            android:textColorHint="@color/gray_20"
            android:textSize="16sp" />
        <EditText
            android:padding="5dp"
            android:id="@+id/et_book_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_price"
            android:hint="请输书的价格"
            android:maxLines="1"
            android:textColor="@color/black_80"
            android:textColorHint="@color/gray_20"
            android:textSize="16sp" />
        <EditText
            android:padding="5dp"
            android:id="@+id/et_book_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_local_email"
            android:hint="请输入书的类型"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/black_80"
            android:textColorHint="@color/gray_20"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_book_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_btn"
        android:gravity="center"
        android:text="添加书籍"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
