<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tingyuxuan.hosition.zxyoyo.com.tingyuxuan">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 用户权限设置 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/BaseAppTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".view.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.RegActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.AddBookActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.DetailActivity"
            android:theme="@style/NoTitleDialog" />
        <activity android:name=".view.DeleteBookActivity" />
        <activity
            android:name=".view.AllUserActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.AllBookActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.BorrowRecordActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.OperationRecordActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.UpdateBookActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.UpdateUserActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".view.PersonActivity"
            android:theme="@style/BaseAppTheme" />
        <activity android:name=".view.WalletActivity"
            android:theme="@style/BaseAppTheme"/>
    </application>

</manifest>